<li class="article__list-item">
  <a href="{{ item.link }}" title="{{ item.title }}" class="hover:sepia hover:font-black">
    <div class="card">
      <img src="{{ get_image(item.meta('cover')).src }}" alt="{{ item.title }}" class="min-w-[250px] max-w-[400px] h-96" />
      <div class="card__container">
        <h4><b>{{ item.title }}</b></h4>
        <p>{{ item.content }}</p>
      </div>
    </div>
  </a>
</li>
