<div class="wrapper hero">
  {% set image = get_image(post.hero_image) %}
  <div class="container" style="background-image:url( {{ image.src }} );">
    <h1 class="hero__title">{{ post.meta('hero-title') }}</h1>
    <p>{{ post.hero_content }}</p>
    <a href="{{ post.meta('hero_cta_link') }}" class="hero__link">{{ post.meta('hero_cta_text') }}</a>
  </div>
</div>
