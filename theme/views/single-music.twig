{% extends 'base.twig' %}
{% block hero %}
  {# {% include './partial/hero-movie.twig' %} #}
{% endblock %}

{% block content %}
  <article class="article-{{ post.ID }} post-type-{{ post.type }}" id="post-{{ post.ID }}">
    <section class="container mx-auto article-content">
      <img src="{{ get_image(post.cover).src }}" alt="alt" class="rounded-full w-52" />

      <h1 class="article-h1">{{ post.title }}</h1>
      {# <h2 class="article-h2">{{ post.meta('subtitle') }}</h2> #}
      <div class="flex flex-row">
        <div>{{ post.video }}</div>
        <div class="flex-grow">{{ post.meta('content') }}</div>
      </div>
    </section>
    <section>
      <hr />
      <p class="article-author text-harvest-700">
        <span>By</span> {{ post.author }} <span>&bull;</span> {{ post.date }}
      </p>
      <hr />
    </section>
    <section>
      {# GALLERIE PHOTO #}
      {% include './partial/gallery.twig' %}
    </section>
  </article>
{% endblock %}
