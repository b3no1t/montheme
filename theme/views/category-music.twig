{% extends 'base.twig' %}

{% block content %}
  <section class="wrapper">
    <header class="caroussel">
      <div class="flex flex-row">
        {% for item in music_big_item %}
          {% set image = get_image(item.cover) %}
          <a href="{{ item.link }}" class="flex items-end w-2/3 p-8 contain big-item bg-chelsea-600 min-h-64" style="background-position-y: bottom;background-image: url( {{ image.src }} );">
            <div class="caroussel__content">
              <h2>{{ item.title }}</h2>
              <p>{{ item.styles }}</p>
            </div>
          </a>
        {% endfor %}
        <div class="w-1/3 bg-chelsea-200 min-h-[350px]">
          <ol class="flex flex-col h-full small-item__list">
            {% for item in music_small_item %}
              {% set image = get_image(item.cover) %}
              <li class="bg-opacity-75 bg-no-repeat bg-cover small-item h-1/3" style="background-image: url( {{ image.src }} );">
                <a href="#">{{ item.title }}</a>
              </li>
            {% endfor %}
          </ol>
        </div>
      </div>
    </header>
  </section>

  <div class="wrapper">
    <div class="container mx-auto">
      <h3 class="m-8 text-3xl text-center text-chelsea-800">This is my category Music 🤟🏼</h3>

      <ul>
        {% for item in musics %}
          <li>
            <a href="{{ item.link }}" title="{{ item.title }}">{{ item.title }}</a>
          </li>
        {% endfor %}
      </ul>

      {{ parent() }}
    </div>
  </div>
{% endblock %}
